%设置水印文字
\newcommand{\setwatermarktext}[1]
	{
	%\SetWatermarkText{#1}%设置水印文字,不需要水印时，填入 \hspace{1em}
	\SetWatermarkText{#1}%设置水印文字,不需要水印时，填入 \hspace{1em}
	\SetWatermarkLightness{0.8}%设置水印亮度
	\SetWatermarkScale{0.6}
	}%设置水印大小}

%文档前面解释图标的命令
\newcommand{\iconnote}[2]
	{
	\begin{blankenvironment}
	\setlength{\parindent}{0em}
	\begin{minipage}[c]{0.2\textwidth}
	\includegraphics[width=0.7\textwidth]{#1}
	\end{minipage}
	\hfill
	\begin{minipage}[c]{0.8\textwidth}
		\fonthei{#2}
	\end{minipage}
	\end{blankenvironment}
	}
%正文中使用图标的命令
\newcommand{\icontext}[2]
	{
	\begin{blankenvironment}
